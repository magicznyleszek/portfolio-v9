{
  "name": "magicznyleszek",
  "private": true,
  "version": "9.0.0",
  "description": "A fistful of drawings and projects by Leszek Pietrzak, a Polish-born illustrator, designer and front-end developer.",
  "repository": "https://github.com/magicznyleszek/portfolio.git",
  "author": "Leszek Pietrzak",
  "license": "CC0 4.0 BY-NC-ND",
  "bugs": {
    "url": "https://github.com/magicznyleszek/portfolio/issues",
    "email": "leszek@magicznyleszek.xyz"
  },
  "homepage": "https://github.com/magicznyleszek/portfolio",
  "scripts": {
    "start": "npm-run-all styles-build watch",
    "test": "npm-run-all lint",
    "build": "npm-run-all svg-optimize styles-build",
    "watch": "npm-watch",
    "serve": "npm run jekyll-serve",
    "lint": "stylelint \"magicznyleszek.css\"",
    "styles-build": "postcss _includes/aggregate.css -o magicznyleszek.css",
    "svg-optimize": "svgo --disable={removeTitle,removeViewBox} --enable=removeDimensions -f _includes/symbols",
    "images-build": "node ./bin/build-images.js",
    "jekyll-build": "jekyll build",
    "jekyll-serve": "jekyll serve --watch --baseurl ''"
  },
  "watch": {
    "styles-build": {
      "patterns": [
        "_includes"
      ],
      "extensions": "css",
      "quiet": false
    }
  },
  "devDependencies": {
    "gm": "^1.23.1",
    "imagemin": "^6.0.0",
    "imagemin-pngquant": "^6.0.0",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.3",
    "npm-watch": "^0.4.0",
    "postcss": "^7.0.2",
    "postcss-cli": "^6.0.0",
    "postcss-import": "^12.0.0",
    "postcss-preset-env": "^5.3.0",
    "prettier": "^1.14.2",
    "svgo": "^1.1.0"
  }
}
