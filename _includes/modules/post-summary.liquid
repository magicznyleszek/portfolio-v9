<div gui-postSummary>

    <a gui-postSummary-thumbnail href="{{ post.url }}">
        <svg><use xlink:href="#icon-thumbnail-{{ post.slug }}"></svg>
    </a>

    <h3 gui-postSummary-title>
        <a href="{{ post.url }}">{{ post.title }}</a>
    </h3>

    <time gui-postSummary-date>{{ post.date | date: "%B %Y" }}</time>

    <ul gui-postSummary-categories>
        {% for category in post.categories %}
        <li>
            <a href="{{ site.baseurl }}/category/{{ category }}">
                {% include helpers/category-label.liquid category=category %}
            </a>
        </li>
        {% endfor %}
    </ul>

</div>
