{% include htmlBegin.liquid %}

{% include global/pageHeader.liquid %}

<section id="pageContent" role="main">

    <article>

        <header>
            <h1>{{ page.title }}</h1>
        </header>

        <h2>Description:</h2>

        {{ content }}

        <h2>Gallery:</h2>

        {% include post/gallery.liquid images=page.gallery slug=page.slug %}

        <footer>

            <time datetime="{{ page.date }}">
                CLOCK {{ page.date | date: "%B %Y" }}
            </time>

        </footer>

    </article>

    {% include post/furtherLinks.liquid previousPost=page.previous nextPost=page.next %}

</section>

{% include global/pageFooter.liquid %}

{% include htmlEnd.liquid %}
