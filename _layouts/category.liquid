{% include htmlBegin.liquid %}

{% include global/pageHeader.liquid %}

<section id="pageContent" role="main">

    <h1 gui-pageTitle>
        {% include helpers/categoryLabel.liquid category=page.slug %}
    </h1>

    {% for post in site.posts %}
        {% if post.categories contains page.slug %}
            {% include listing/postSummary.liquid %}
        {% endif %}
    {% endfor %}

</section>

{% include global/pageFooter.liquid %}

{% include htmlEnd.liquid %}
